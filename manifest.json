{
  "manifest_version": 2,

  "name": "Instagrab",
  "description": "This extension shows allows users to save images from Instagram in the browser",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": ["main.js"]
    }
  ]
}
